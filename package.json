  "dependencies": {
    "@reduxjs/toolkit": "^2.6.1",
    "@solana/web3.js": "^1.98.0",
    "@tailwindcss/postcss": "^4.0.17",
    "@telegram-apps/sdk-react": "^3.1.7",
    "@telegram-apps/telegram-ui": "^2.1.8",
    "@tonconnect/sdk": "^3.0.6",
    "@tonconnect/ui-react": "^2.0.11",
    "axios": "^1.7.9",
    "buffer": "^6.0.3",
    "cra-template": "1.2.0",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.5",
    "framer-motion": "^12.6.3",
    "p-limit": "^6.2.0",
    "pm2": "^5.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.4.0",
    "react-jsx-runtime": "^1.0.0-alpha.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.1.3",
    "react-scripts": "^5.0.1",
    "serve": "^14.2.4",
    "tailwindcss": "^4.0.17"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development react-scripts start",
    "build": "cross-env NODE_ENV=production react-scripts build && npm i --legacy-peer-deps",
    "start": "npm run dev",
    "start-server": "cross-env NODE_ENV=production npx pm2 start 'npx serve -s build -l 3001' --name 'folk-front'",
    "stop-server": "npx pm2 stop folk-front && npx pm2 delete folk-front",
    "test": "cross-env NODE_ENV=test react-scripts test",
    "eject": "react-scripts eject",
    "type-check": "tsc --noEmit",
    "format": "npx prettier --write \"{__tests__,components,pages,styles,src}/**/*.{ts,tsx,js,jsx,json,css}\"",
    "lint": "next lint && npx prettier --check \"{__tests__,components,pages,styles,src}/**/*.{ts,tsx,js,jsx,json,css}\" && npm run type-check"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/plugin-transform-private-property-in-object": "^7.25.9",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "cross-env": "^7.0.3",
    "typescript": "^4.9.5"
  }
}
